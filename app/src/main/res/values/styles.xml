<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:ellipsize">none</item>
        <item name="android:dropDownVerticalOffset">18dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="spinner_item" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">1px</item>
        <item name="android:scrollbars">none</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="spinner_dropdown_item_style" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>


</resources>